<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indianred</item>
        <item name="colorPrimaryDark">@color/indianred</item>
        <item name="colorAccent">@color/indianred</item>
    </style>

    <!-- Theme ProgressDialog. -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/indianred</item>
        <item name="android:textColorPrimary">@color/indianred</item>
        <item name="android:textColorSecondary">@color/indianred</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Main" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
